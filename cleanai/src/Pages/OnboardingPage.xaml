<Page
    x:Class="CleanAI.Pages.OnboardingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#121212">
    <Grid Padding="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Spacing="16" HorizontalAlignment="Center" VerticalAlignment="Center">
            <FontIcon x:Name="OnboardingIcon" Glyph="&#xE9D9;" FontSize="64" Foreground="#6366f1"/>
            <TextBlock x:Name="OnboardingTitle" Text="ИИ анализирует ваши файлы" FontSize="30" FontWeight="SemiBold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="OnboardingText" Text="Но НИКОГДА не удаляет без вашего разрешения" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
            <Button x:Name="BackButton" Content="Назад" Click="OnBack"/>
            <Button x:Name="NextButton" Content="Далее" Click="OnNext" Background="#6366f1"/>
        </StackPanel>
    </Grid>
</Page>
