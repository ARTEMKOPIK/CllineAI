<Page
    x:Class="CleanAI.Pages.RecommendationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#121212">
    <Grid Padding="24" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Spacing="12">
            <TextBlock Text="Рекомендации ИИ" FontSize="24" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <Button Content="Очистить всё безопасное" Background="#ef4444" Click="OnCleanAll" CornerRadius="4"/>
        </StackPanel>

        <TabView Grid.Row="1">
            <TabViewItem Header="Можно удалить">
                <ListView x:Name="DeleteList" IsItemClickEnabled="False"/>
            </TabViewItem>
            <TabViewItem Header="Спросить">
                <ListView x:Name="AskList" IsItemClickEnabled="False"/>
            </TabViewItem>
            <TabViewItem Header="Оставить">
                <ListView x:Name="KeepList" IsItemClickEnabled="False"/>
            </TabViewItem>
        </TabView>
    </Grid>
</Page>
